<style>
.shop-locator-iframe {
  height: 1000px;
  border: none;
}
@media (min-width: 576px) {
  .shop-locator-iframe { height: 800px; }
}
@media (min-width: 768px) {
  .shop-locator-iframe { height: 700px; }
}
@media (min-width: 992px) {
  .shop-locator-iframe { height: 540px; }
}
@media (min-width: 1200px) {
  .shop-locator-iframe { height: 540px; }
}
.section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}

@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}
</style>

<section id="lps-shop-locator-{{ section.id }}" class="lps-shop-locator page-width section-{{ section.id }}-padding">
	
	<div class="outlined-block p-5">
		<div class="row">
			<div class="col-12">
			{{ page.content }}
			</div>
			<div class="col-12">
				<iframe class="shop-locator-iframe w-100" src="https://hub.ndk.group/widgets/map/lobster?css=https:{{ 'LPS-shop-locator.css' | asset_url | url_encode }}" allow="geolocation"></iframe>
			</div>
		</div>
	</div>
	
</section>


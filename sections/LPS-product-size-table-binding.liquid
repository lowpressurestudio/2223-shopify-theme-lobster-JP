{% schema %}
{
  "name": "LPS Size Table Binding",
  "tag": "section",
  "class": "lps-binding-size-table-section",
  "limit": 1,
  "settings": [
    {
    	"type": "header",
      "content": "Binding Size Chart"
    },
    {
    	"type": "paragraph",
      "content": "Displays the binding size table."
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "LPS Size Table Binding"
    }
  ]
}
{% endschema %}

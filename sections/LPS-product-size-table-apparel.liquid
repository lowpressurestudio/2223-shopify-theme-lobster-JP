{{ 'LPS-section-size-table.css' | asset_url | stylesheet_tag }}

{% for tag in product.tags %}
{% assign tag_down = tag | downcase %}
{% if tag_down contains 'pant' %}
{% assign show_table = "pants" %}
{% elsif tag_down contains 'top' %}
{% assign show_table = "tops" %}
{% endif %}
{% endfor %}

<style>
.section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}

@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}
</style>

{% if show_table == 'pants' %}
<section id="lps-product-size-table-apparel-{{ section.id }}" class="lps-tabs lps-product-size-table-apparel page-width lps-size-table section-{{ section.id }}-padding">
  <div id="size-table-anchor"></div>
  <ul class="row nav nav-tabs card-header-tabs" style="margin-left: -7.5px; margin-right: -7.5px;" data-bs-tabs="tabs">
    <li class="nav-item col-6 mb-3">
      <a class="nav-link active" aria-current="true" data-bs-toggle="tab" href="#sizechart">Pants Size Chart</a>
    </li>
    <li class="nav-item col-6 mb-3">
      <a class="nav-link" data-bs-toggle="tab" href="#howtomeasure">How to Measure</a>
    </li>
  </ul>
 
  <div class="row">
    <div class="col-12 tab-content mt-3">
      <div class="tab-pane active" id="sizechart">

        <div class="lps-size-table-wrapper outlined-block p-0">
          <table>
            <tr>
              <th>Size</th>
              <td>S</td>
              <td>M</td>
              <td>L</td>
              <td>XL</td>
            </tr>
            <tr>
              <th>Hip (cm)</th>
              <td>76</td>
              <td>82</td>
              <td>88</td>
              <td>94</td>
            </tr>
            <tr>
              <th>Bottom Length (cm)</th>
              <td>99</td>
              <td>102</td>
              <td>105</td>
              <td>108</td>
            </tr>
          </table>
        </div>

      </div>

      <div class="tab-pane" id="howtomeasure">
        <div class="row row-eq-height">
          <div class="col-12 col-md-6">
            <div class="outlined-block h-100 text-center">
              <img src="{{ 'apparel-how-to-measure.png' | asset_img_url: '500x' }}" style="width: 50%">
            </div>
          </div>
          <div class="col-12 col-md-6">
            <div class="outlined-block h-100 d-flex">
              <p class="text-left mx-auto align-self-center" style="max-width: 90%; font-size: 1.8rem;">
                1. Chest<br>
                Measure around the fullest part of your chest, keeping the tape measure horizontal.
                <br><br>
                2. Hips<br>
                Measure around the fullest part of your hips, keeping the tape measure horizontal.
                <br><br>
                3. Top Length<br>
                Measured from the highest shoulder point to bottom hem               
                <br><br>
                4. Bottom Length<br>
                Measured from the hips to bottom hem
                <br><br>
                If you're on the borderline between two sizes, order the smaller size for a tighter fit or the larger size for a looser fit. If your measurements for chest and waist correspond to two different suggested sizes, order the size indicated by your chest measurement.
              </p>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
{% elsif show_table == 'tops' %}

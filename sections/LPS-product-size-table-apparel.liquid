  <div class="row">
    <div class="col-12 tab-content mt-3">
      <div class="tab-pane active" id="sizechart">

        <div class="lps-size-table-wrapper outlined-block p-0">
          <table>
            <tr>
              <th>Size</th>
              <td>S</td>
              <td>M</td>
              <td>L</td>
              <td>XL</td>
            </tr>
            <tr>
              <th>Chest (cm)</th>
              <td>116</td>
              <td>122</td>
              <td>128</td>
              <td>134</td>
            </tr>
            <tr>
              <th>Hip (cm)</th>
              <td>102</td>
